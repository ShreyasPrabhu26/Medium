generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  username String?
  password String
  blogs    Blog[]
}

model Blog {
  id        String  @id @default(uuid())
  authorId  String
  title     String
  content   String
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
}
